<div class="container forms-global">
<p id="notice"><%= notice %></p>
<center>
<h1 class="landing-page-h1">Users</h1>

<table>
  <thead>
    <tr>
      <th class="users-font">First name</th>
      <th class="users-font">Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>
<br />
<br />
  <tbody class="table table-bordered ">
    <% @users.each do |user| %>
      <tr>
        <td class="users-font"><%= user.first_name %> <%= user.last_name %></td>
        <td class="users-font"><%= user.email %></td>
        <td><button type="button" class="btn btn-primary"><%= link_to 'Show', user %></button></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- removed the ling to New User -->
<% link_to 'New User', new_user_path %>
</center>
</div>